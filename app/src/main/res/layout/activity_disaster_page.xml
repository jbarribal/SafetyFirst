<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisasterPage">

    <Button
            android:text="EARTHQUAKE"
            android:textSize="20pt"
            android:fontFamily="@font/colombosansfont"
            android:layout_centerHorizontal="true"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEarthquake"
            android:layout_above="@+id/btnFire"
            android:layout_marginBottom="30dp"/>
    <Button
            android:text="FIRE"
            android:layout_width="350dp"
            android:textSize="20pt"
            android:fontFamily="@font/colombosansfont"
            android:layout_height="wrap_content"
            android:id="@+id/btnFire"
            android:layout_centerInParent="true" />
    <Button
            android:text="FLOOD"
            android:layout_width="350dp"
            android:textSize="20pt"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/colombosansfont"
            android:layout_height="wrap_content"
            android:id="@+id/btnFlood"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/btnFire"/>

</RelativeLayout>